<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/img_order"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="4dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_order_date"
                    android:text="Today at: 13:05:56 pm"
                    android:fontFamily="@font/brandon_medium"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="14sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_order_number"
                    android:text="Order Number"
                    android:fontFamily="@font/brandon_medium"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="italic|bold"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_order_comment"
                    android:text="Order Comment"
                    android:fontFamily="@font/brandon_medium"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="italic"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_order_status"
                    android:text="Order Status"
                    android:fontFamily="@font/brandon_medium"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="italic"/>

            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/btn_track_order"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:text="tracking"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_tracking_bg"
                android:layout_marginRight="3dp"
                android:drawableRight="@drawable/ic_baseline_address_24"
                android:drawableTint="@color/white"
                android:paddingRight="5dp"
                android:paddingLeft="30dp"
                />

            <Button
                android:id="@+id/btn_cancel_order"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:layout_height="35dp"
                android:text="Cancel"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_tracking_bg"
                android:backgroundTint="@color/blue"/>

        </LinearLayout>



    </LinearLayout>






</androidx.cardview.widget.CardView>